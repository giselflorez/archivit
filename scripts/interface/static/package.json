{
  "name": "arc8-frontend",
  "version": "1.0.0",
  "description": "ARC-8 Frontend JavaScript Modules - Post-Quantum Cryptography + Seed Engine",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "@noble/post-quantum": "^0.2.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "vite": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/__tests__/**/*.test.mjs"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "keywords": [
    "post-quantum",
    "cryptography",
    "kyber",
    "dilithium",
    "ml-kem",
    "ml-dsa",
    "fips-203",
    "fips-204"
  ],
  "author": "ARCHIV-IT Foundation",
  "license": "UNLICENSED"
}
